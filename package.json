{
  "name": "@skootsky/craft",
  "version": "0.1.3",
  "description": "An autonomous coding agent that writes code for you",
  "module": "dist/agent.js",
  "type": "module",
  "bin": {
    "craft": "dist/agent.js",
    "craft-setup": "dist/setup.js"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoshuaSkootsky/craft.git"
  },
  "license": "MIT",
  "keywords": [
    "bun",
    "agent",
    "ai",
    "cli",
    "coding"
  ],
  "scripts": {
    "build": "bun build src/agent.ts --outdir dist --target bun && bun build src/setup.ts --outdir dist --target bun",
    "dev": "bun run src/agent.ts",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "release": "npm version patch && npm publish --access public"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
